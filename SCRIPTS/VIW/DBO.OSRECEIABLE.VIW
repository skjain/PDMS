CREATE VIEW OSRECEIABLE AS 
SELECT BILLMAIN.EXTRA1,BILLMAIN.CRAC,BILLMAIN.RECSTAT,BILLMAIN.COMP,BILLMAIN.UNIT,BILLMAIN.VTYP,BILLMAIN.DBCD,
BILLMAIN.DATE,(billmain.date+BILLMAIN.CDAY) as DUDT, BILLMAIN.PCOD,BILLMAIN.BRCD,BILLMAIN.TQTY,
BILLMAIN.BNET, BILLMAIN.VBNO,BILLMAIN.RETG,BILLMAIN.PYRA, 
(SELECT ISNULL(SUM(RAMT),0) FROM RPTRAN WHERE BILLMAIN.COMP=RPTRAN.COMP AND BILLMAIN.UNIT=RPTRAN.UNIT AND BILLMAIN.VTYP=RPTRAN.BSR1 AND BILLMAIN.VBNO=RPTRAN.SVBN AND BILLMAIN.DBCD=RPTRAN.SDBC AND DATE<='03/31/2011') AS RAMT FROM BILLMAIN WHERE BILLMAIN.DATE>='04/01/2010' AND DATE<='03/31/2011' AND (BILLMAIN.VTYP='SAL' OR BILLMAIN.VTYP='DBN') AND BILLMAIN.RECSTAT='A'