CREATE VIEW ITEM_STOCK_TEMP AS  
SELECT COMP,UNIT,ICOD,ISNULL(SUM(QNTY),0) AS ADDQTY,0 AS MINUSQTY FROM STORETRAN WHERE OPER='+' AND 
RECSTAT<>'D' AND DVCD='000001' GROUP BY COMP,UNIT,ICOD 
UNION 
SELECT COMP,UNIT,ICOD,0 AS ADDQTY,ISNULL(SUM(QNTY),0) AS MINUSQTY FROM STORETRAN WHERE OPER='-' AND 
RECSTAT<>'D' AND DVCD='000001' GROUP BY COMP,UNIT,ICOD 